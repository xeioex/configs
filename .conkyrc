# -- General settings -- #
out_to_x yes
update_interval 1

# -- Alignment settings -- #
alignment top_left
gap_x 1928
gap_y 1166

own_window yes
own_window_type override
own_window_transparent no
own_window_colour black

# -- Text settings -- #
use_xft yes
xftfont MaiandraGD:size=16
default_color ffffff
color0 ffffff
color1 ff0000
color2 00ff00
color3 0000ff
color4 20B2AA
color5 707000
color6 20ddbb
color7 FFFF00
color8 B22222

TEXT
${color8}CPU:${cpu cpu0}% ${cpugraph cpu0 24,64 ffffff ff0000 -l -t} \
MEM:${memperc}% ${memgraph 24,64 ffff00 00ff00 -l -t}\
${if_existing /proc/net/route eth0} \
NET: ${downspeedgraph eth0 24,64 ffffff 0000ff -l -t}\
${endif} \
${if_existing /proc/net/route wlan0} \
NET: ${downspeedgraph wlan0 24,64 ffffff 0000ff -l -t}\
${endif} \
DISK: ${diskiograph sda 24,64 ffffff 0000ff -l -t} ${color4}|${color0} \
${color6}volume: ${exec pulseaudio-ctl volume}% ${exec pulseaudio-ctl mutestatus} ${color4}|${color0} \
${color5}${time %d %m %Y} ${time %R} ${color4}|${color0} \
${color7}keyboard: ${color6}${exec xkb-switch}
